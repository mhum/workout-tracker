<% provide(:title, "Sign In") %> <h1>Sign In</h1>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= form_for(:session, :html => {:class => 'form well well-lg'}, url: sessions_path) do |f| %>

		<div class="row">
			<div class = "form-group" >
				<label class="control-label" for="email">Email</label>
				<%= f.text_field :email, :class => "form-control", :id => "email"  %>
			</div>
		</div>
		<div class="row">
			<div class = "form-group" >
				<label class="control-label" for="password">Password</label>
				<%= f.password_field :password, :class => "form-control", :id => "password"  %>
			</div>
		</div>
		<div class="row center">
			<%= f.submit 'Sign In', :class => "btn btn-default" %>
		</div>
		<% end %>

		<p>
			New user? <%= link_to "Sign up now!", signup_path %>
		</p>
	</div>
</div>

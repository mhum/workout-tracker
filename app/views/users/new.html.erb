<% provide(:title, "Sign Up") %> <h1>Sign Up</h1>
<div class = "row">
	<div class="col-xs-4"></div>
	<div class="col-xs-4">
		<%= form_for(@user, :html => {:class => 'form well well-lg'}) do |f| %>
		<%= render 'shared/error_messages' %>
		<div class="row">
			<div class = "<%= field_class(@user, :first_name) %>" >
				<label class="control-label" for="firstName">First Name</label>
				<%= f.text_field :first_name, :class => "form-control", :id => "firstName"  %>
			</div>
		</div>
		<div class="row">
			<div class = "<%= field_class(@user, :email) %>" >
				<label class="control-label" for="email">Email</label>
				<%= f.email_field :email, :class => "form-control", :id => "email" %>
			</div>
		</div>
		<div class="row">
			<div class = "<%= field_class(@user, :password) %>" >
				<label class="control-label" for="password">Password</label>
				<%= f.password_field :password, :class => "form-control", :id => "password" %>
			</div>
		</div>
		<div class="row">
			<div class = "<%= field_class(@user, :password_confirmation,) %>" >
				<label class="control-label" for="pass_confirm">Confirm Password</label>
				<%= f.password_field :password_confirmation, :class => "form-control", :id => "pass_confirm" %>
			</div>
		</div>
		<div class="row center">
			<%= f.submit 'Submit', :class => "btn btn-default" %>
		</div>
		<% end %>
	</div>
	<div class="col-xs-4"></div>
</div>
